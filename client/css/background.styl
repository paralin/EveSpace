html, body
  width: 100%
  height: 100%

.pageBack
  z-index: -500
  pointer-events: none
  background-size: cover !important
  height: 100%
  width: 100%
  position:fixed
  top: 50px
  left: 0px

.pageBack:after
  box-shadow: inset 0 0 25em #000
  position: fixed
  top 0
  left 0
  width: 100%
  height: 100%
  z-index: 2
  content: ""
.entry
  color white
.entry label
  color white
